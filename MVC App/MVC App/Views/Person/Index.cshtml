
@model List<Person>

<h1>People</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
            </tr>
        }
    </tbody>
</table>


<form asp-action="Details" method="post">
    <input type="hidden" name="id" value="1" />
    <button type="submit">View Details</button>
</form>

